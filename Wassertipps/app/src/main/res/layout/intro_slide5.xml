<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/intro_text_padding"
                android:paddingEnd="@dimen/intro_text_padding"
                android:paddingTop="@dimen/intro_text_padding">
    <ScrollView android:layout_width="wrap_content"
                android:layout_height="500dp"
                android:layout_alignParentTop="true"
                android:padding="@dimen/activity_vertical_margin"
                android:background="@drawable/text_layout_bg">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/intro_text_padding"
                android:layout_alignParentTop="true">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/intro5_title"
                    android:id="@+id/intro5_title"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:textSize="24sp" android:fontFamily="sans-serif" android:layout_centerVertical="true"/>
            <TextView
                    android:text="@string/intro5_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/intro5_text1"
                    android:layout_below="@id/intro5_title"
                    android:textAlignment="textStart"
                    android:paddingBottom="@dimen/activity_vertical_margin"/>
            <TextView
                    android:text="@string/intro5_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/intro5_text2"
                    android:layout_below="@id/intro5_text1"
                    android:textAlignment="textStart"
                    android:paddingBottom="@dimen/activity_vertical_margin"/>
            <TextView
                    android:text="@string/intro5_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/intro5_text3"
                    android:layout_below="@id/intro5_text2"
                    android:textAlignment="textStart"
                    android:paddingBottom="@dimen/activity_vertical_margin"/>
            <TextView
                    android:text="@string/intro5_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/intro5_text4"
                    android:layout_below="@id/intro5_text3"
                    android:textAlignment="textStart"
                    android:paddingBottom="@dimen/activity_vertical_margin"/>
            <Button
                    android:text="@string/intro5_btnText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/intro5_text4"
                    android:id="@+id/zustimmen"
                    android:background="@drawable/green_button_selector"
                    android:textAllCaps="false"
                    android:textColor="?attr/textWhite"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>