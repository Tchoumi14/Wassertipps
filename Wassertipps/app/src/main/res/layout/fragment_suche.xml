<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="@dimen/basic_text_padding"
             tools:context=".navfragments.SucheFragment">
    <AutoCompleteTextView
            android:hint="Eingeben"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/autoCompleteSearch"/>
    <TextView
            android:text="Favoriten"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@id/autoCompleteSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_font_size"
            android:textColor="?attr/colorAppTextPrimary"
            android:id="@+id/textView"/>
    <View
            android:layout_below="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="?attr/borderColor"
            android:id="@+id/view"/>
</RelativeLayout>