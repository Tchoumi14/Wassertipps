<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_margin="@dimen/basic_text_padding"
              android:layout_height="85dp"
                android:id="@+id/fav_listitem">
    <!-- Content -->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="45dp"
                  android:orientation="horizontal">
        <TextView
                android:text="@string/city_label"
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:textSize="@dimen/title_font_size"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:gravity="center|start"
                android:textAlignment="gravity"
                android:layout_height="match_parent"
                android:id="@+id/city_name"/>
        <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:id="@+id/fav_delete_btn"
                android:background="@drawable/ic_delete"/>
    </LinearLayout>

    <TextView
            android:text="@string/addr_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:id="@+id/addresse"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:baselineAligned="false"
                  android:orientation="horizontal">
        <!-- HÃ¤rte -->
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight=".5"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView
                    android:text="@string/haerte_label"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_height="wrap_content" android:id="@+id/haerte_label"/>
            <TextView
                    android:text="@string/blank_entry"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/fav_harte_label"/>
        </LinearLayout>
        <!-- Nitrat -->
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight=".5"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView
                    android:text="@string/nitrat_label"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/nitrat_label"/>
            <TextView
                    android:text="@string/blank_entry"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/fav_nitrat_label"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>