<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <!-- stroke for the rectangle-->
        <shape android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke android:width="1dp" android:color="?attr/colorDarkTint" />
            <solid android:color="?attr/appBackgroundColor" />
            <corners
                    android:bottomLeftRadius="8dp"
                    android:bottomRightRadius="8dp"/>
        </shape>
    </item>

    <!-- rectangle inside to hide the top stroke -->
    <item android:bottom="8dp" android:left="1dp" android:right="1dp">
        <shape
                android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <solid android:color="?attr/appBackgroundColor" />
        </shape>
    </item>


</layer-list>
