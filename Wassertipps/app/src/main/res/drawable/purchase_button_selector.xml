<?xml version="1.0" encoding="utf-8"?>
<selector
        xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <corners android:radius="10dp" />
            <gradient
                    android:startColor="?attr/colorAppPrimaryGreenDark"
                    android:endColor="?attr/colorAppPrimaryGreenDark"
                    android:angle="270" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <corners android:radius="10dp" />
            <gradient
                    android:endColor="?attr/colorAppPrimaryGreenDark"
                    android:startColor="?attr/colorAppPrimaryGreenDark"
                    android:angle="270" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="10dp" />
            <gradient
                    android:startColor="?attr/colorAppPrimaryGreen"
                    android:endColor="?attr/colorAppPrimaryGreen"
                    android:angle="270" />
        </shape>
    </item>
</selector>